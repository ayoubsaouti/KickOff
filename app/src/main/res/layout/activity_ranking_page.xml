<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Ranking_Page">

    <TextView
        android:id="@+id/titleRanking"
        android:layout_width="240dp"
        android:layout_height="53dp"
        android:layout_marginTop="15dp"
        android:text="@string/title_ranking"
        android:textAlignment="center"
        android:textColor="@color/darkYellow"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoApp" />

    <ListView
        android:id="@+id/rankingList_id"
        android:layout_width="wrap_content"
        android:layout_height="480dp"
        android:background="@color/white"
        android:fontFamily="@font/abel"
        tools:listitem="@layout/list_item_ranking"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRanking" />

    <ImageView
        android:id="@+id/LogoApp"
        android:layout_width="385dp"
        android:layout_height="79dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>